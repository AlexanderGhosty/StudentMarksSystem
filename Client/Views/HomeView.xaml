<UserControl x:Class="Client.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Client.ViewModels">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:HomeViewModel/>
    </UserControl.DataContext>

    <StackPanel Margin="20">
        <TextBlock Text="Домашняя страница" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Имя: " FontWeight="Bold"/>
            <TextBlock Text="{Binding Name}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Логин: " FontWeight="Bold"/>
            <TextBlock Text="{Binding Login}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="ID: " FontWeight="Bold"/>
            <TextBlock Text="{Binding Id}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Роль: " FontWeight="Bold"/>
            <TextBlock Text="{Binding Role}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
