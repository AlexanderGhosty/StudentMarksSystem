<UserControl x:Class="Client.Views.AdminPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Client.ViewModels"
             xmlns:models="clr-namespace:Client.Models"
             Height="Auto" Width="Auto">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Content="Загрузить пользователей"
                    Command="{Binding LoadUsersCommand}" Margin="5"/>
            <Button Content="Добавить пользователя"
                    Command="{Binding AddUserCommand}" Margin="5"/>
            <Button Content="Удалить пользователя"
                    Command="{Binding DeleteUserCommand}" Margin="5"/>
        </StackPanel>

        <ListView Grid.Row="1"
                  ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Логин" DisplayMemberBinding="{Binding Login}" />
                    <GridViewColumn Header="Роль" DisplayMemberBinding="{Binding Role}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
